Lista Ligada
// estruturadedados_ex.cpp : Este arquivo contém a função 'main'. A execução do programa começa e termina ali.
//

#include <iostream>
#include <stdlib.h>

typedef struct No {
	int valor;
	struct No *prox;
}No;


No* criar_no(int valor) {
	No* novoNo = (No*)malloc(sizeof(No));
	novoNo -> valor = valor;
	novoNo ->prox = NULL;
}
void push_front(No** head, int v) {
	No* novo = (No*)malloc(sizeof(No));
	if (novo == NULL) return;
	novo->valor = v;
	novo->prox = *head;
	*head = novo;
}

void somar(No* head) {
	int soma = 0;
	for (No* p = head; p != NULL; p = p->prox) {
		printf("%d -> ", p->valor);
		soma++;
	}

}

int main()
{
	


}



