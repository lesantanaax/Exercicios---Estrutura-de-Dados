Exercício 4 — Função com verificação de NULL

#include <stdio.h>

void imprime_int(const int *p){
    if(p == NULL){
        printf("Ponteiro Nulo\n");
    } else {
        printf("Valor: %d\n", (void*)p);
    }
}

int main() {
    int *x =10; 
    imprime_int(NULL);
    imprime_int(&x);
    
    return 0;
}

-------------------------------------------------
5) Ponteiros e funções: passagem por valor e passagem por
referência

#include <stdio.h>

void swap(int *a, int *b){
    int temp = *a;
    *a = *b;
    *b = temp;
}

int main() {
    int x = 3;
    int y = 9;
    
    printf("x antes da troca: %d\n", x);
    printf("y antes da troca: %d\n", y);
    swap(&x, &y);
    
    printf("x depois da troca: %d\n", x);
    printf("y depois da troca: %d\n", y);

}
----------------------------------------------------
6)Ponteiro de ponteiro
void aponta_para_zero(int **pp, int *zero){
  *pp = zero;
}

int main()
{
    int zero = 0;
    int x = 42;
    int *p = &x;
    
    printf("Valor: %d\n", (void*)p);
    
    aponta_para_zero(&p, &zero);
    
    printf("Valor: %d\n", (void*)p);

}

---------------------------------------------------
7) Impressão de Arrays

void imprime_array(const int *v, int n){
  for (int i = 0; i < n; i++) {
    printf("%d\n", *(v + i));
  }
}

int main()
{
    int v[5] = {10, 20, 30, 40, 50};
    int *p = v;
    int n = 5;
    
    imprime_array(p , n);

} 

-----------------------------------------------------
8) - Implementação manual de strlen
 int meu_strlen(const char* s) {
    int cont = 0;

    if (s == NULL) {
        return -1;
    }
    else {
        while (*(s+cont) != '\0') {
            printf("%c\n", *(s + cont));
            cont++;
        }
        printf("Qtd de carateres: %d", cont);
    }
}

int main()
{
    char s[] = "casa";
    meu_strlen(s);
}

--------------------------------------------------
9) A finalizar
typedef struct Aluno {
    char nome[50];
    int ra;
    float nota;
}Aluno;

void imprime_aluno(const struct Aluno* a) {
    if (a == NULL) {
        printf("ERRO AO CADASTRAR ALUNO!");
    }
    else {
        //printf("Nome %p", a->nome);
        printf("RA %d\n", a->ra);
        printf("Nota %f\n", a->nota);

    }
}

int main()
{
    struct Aluno aluno1;
    //aluno1.nome = "Leticia";
    aluno1.ra = 6737;
    aluno1.nota = 8.9;

    imprime_aluno(&aluno1);

}

----------------------------------------

int* cria_int(int valor) {
	int* p = (int *)malloc(sizeof(int));
	*p = 23;

	*p = valor;
	return p;

}


int main()
{
	int* p = cria_int(42);
	printf("valor: %d", *p);
	free(p);


}


